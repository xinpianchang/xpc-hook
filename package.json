{
  "name": "@newstudios/hook",
  "version": "0.0.2",
  "description": "common hooks for react",
  "main": "index.js",
  "types": "index.d.ts",
  "scripts": {
    "build:js": "babel src --no-comments --extensions \".ts,.tsx\" --out-dir dist",
    "build:types": "tsc --emitDeclarationOnly",
    "build": "npm run build:types && npm run build:js",
    "pre:types": "tsc --build tsconfig.prod.json",
    "pre:js": "babel . --ignore \"src,node_modules\" --no-comments --extensions .ts -d .",
    "pre": "npm run pre:types && npm run pre:js",
    "prepublishOnly": "npm run clean && npm run build && npm run pre",
    "clean": "rimraf dist && rimraf ./*.d.ts && rimraf ./*.js",
    "lint": "eslint src/**/* --fix",
    "types:check": "tsc --noEmit",
    "types:watch": "npm run types:check -- --watch",
    "start": "npm run build:js -- --watch",
    "dryrun": "npm publish --access public -dry-run"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/xinpianchang/xpc-hook.git"
  },
  "keywords": [
    "javascript",
    "common",
    "utils",
    "react",
    "typescript"
  ],
  "author": "tanghongyu <tanghongyu@xinpianchang.com>",
  "homepage": "https://github.com/xinpianchang/xpc-hook#readme",
  "license": "MIT",
  "devDependencies": {
    "@babel/cli": "^7.10.1",
    "@babel/core": "^7.10.2",
    "@babel/plugin-proposal-class-properties": "^7.10.1",
    "@babel/plugin-transform-typescript": "^7.10.1",
    "@babel/preset-env": "^7.10.2",
    "@babel/preset-typescript": "^7.10.1",
    "@types/react": "^16.9.38",
    "@typescript-eslint/eslint-plugin": "^3.2.0",
    "@typescript-eslint/parser": "^3.2.0",
    "eslint": "^7.2.0",
    "eslint-plugin-import": "^2.21.2",
    "eslint-plugin-jsx-a11y": "^6.3.0",
    "eslint-plugin-react": "^7.20.0",
    "eslint-plugin-react-hooks": "^4.0.4",
    "lint-staged": "^10.2.9",
    "rimraf": "^3.0.2",
    "typescript": "^3.8.3"
  },
  "dependencies": {
    "resize-observer-polyfill": "^1.5.1"
  },
  "peerDependencies": {
    "react": "^16.13.1"
  },
  "engines": {
    "node": ">= 10.0.0"
  },
  "files": [
    "dist",
    "index.js",
    "index.d.ts",
    "createEvent.js",
    "createEvent.d.ts",
    "useArrowKey.js",
    "useArrowKey.d.ts",
    "useClickAway.js",
    "useClickAway.d.ts",
    "useDevicePixeRatio.js",
    "useDevicePixeRatio.d.ts",
    "useDrag.js",
    "useDrag.d.ts",
    "useEvent.js",
    "useEvent.d.ts",
    "useHover.js",
    "useHover.d.ts",
    "useInvalidator.js",
    "useInvalidator.d.ts",
    "useRaf.js",
    "useRaf.d.ts",
    "useRefObject.js",
    "useRefObject.d.ts",
    "useResize.js",
    "useResize.d.ts",
    "useResizeObserver.js",
    "useResizeObserver.d.ts",
    "useSafeClick.js",
    "useSafeClick.d.ts",
    "useSetupCanvas.js",
    "useSetupCanvas.d.ts",
    "useShortcutKey.js",
    "useShortcutKey.d.ts",
    "useThrottle.js",
    "useThrottle.d.ts",
    "useThrottleCallback.js",
    "useThrottleCallback.d.ts",
    "useUpdate.js",
    "useUpdate.d.ts"
  ]
}
